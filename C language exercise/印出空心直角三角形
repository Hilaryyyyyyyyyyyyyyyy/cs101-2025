#include <stdio.h>

int main() {
    int N;
    printf("N = ");
    scanf("%d", &N);

    int i, j;
    printf("*\n");
    for(i = 0; i <= N-3; ++i) {
        printf("*");
        for(j = 1; j <= i; ++j) {
            printf(" ");
        }
        printf("*\n");
    }
    for(j = 1; j <= N; ++j) {
        printf("*");
    }
    printf("\n");
    return 0;
}
