#include <stdio.h>
int main() {
    int numbers;  
    int sum = 0;
    int count = 0;
    float average;
    printf("Please enter the numbers (0:quit):\n");
    scanf("%d", &numbers);
    while(numbers != 0) {
        sum = sum + numbers;
        count = count + 1;
        scanf("%d", &numbers);
    }
    average = (float) sum / count;
    printf("The average is %f\n", average);
    return 0;
}
