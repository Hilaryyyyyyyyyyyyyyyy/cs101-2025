#include <stdio.h>

int main()
{
    int num1, num2, num3;
    printf("Please enter an integer:\n");
    scanf("%d", &num1);
    printf("please enter an integer:\n");
    scanf("%d", &num2);
    printf("Please enter an integer:\n");
    scanf("%d", &num3);
    int ave = (num1 + num2 + num3)/3;
    printf("The average is:%d.\n",ave);
}
